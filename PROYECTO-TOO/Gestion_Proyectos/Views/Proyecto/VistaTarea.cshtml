
@{
    ViewBag.Title = "VistaTarea";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb mb-4 mt-4">
    <li class="breadcrumb-item"><a href="index.html">Gestión</a></li>
    <li class="breadcrumb-item"><a href="index.html">Proyectos</a></li>
    <li class="breadcrumb-item active">Tareas</li>
</ol>

<div class="card">
    <div class="card-header">

        <i class="fas fa-paperclip me-1"></i>Lista de Tareas
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-12">
                <button type="button" class="btn btn-secondary" onclick="abrirModal()">Crear Tarea</button>
            </div>
        </div>

        <hr />

        <table id="tablatarea" class="display cell-border" style="width: 100%">
            <thead>
                <tr>
                    <th>Id Tarea</th>
                    <th>Id Actividad</th>
                    <th>Nombre</th>
                    <th>Descripcion</th>
                    <th>Fecha Inicio</th>
                    <th>Fecha Fin</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="FormModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-gradient-gray text-white">
                <h5 class="modal-title" id="exampleModalLabel">Tarea</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                <input id="txtidtarea" type="hidden" value="0"/>

                <div class="row g-2">
                    <div class="col-sm-6">
                        <label for="txtidactividad" class="form-label">Id Actividad</label>
                        <input type="number" class="form-control" id="txtidactividad" autocomplete="off">
                    </div>
               
                    <div class="col-sm-6">
                        <label for="txtnombretarea" class="form-label">Nombre de la tarea</label>
                        <input type="text" class="form-control" id="txtnombretarea" autocomplete="off">
                    </div>
                
                    <div class="col-sm-6">
                        <label for="txtdescripcion" class="form-label">Descripción</label>
                        <input type="text" class="form-control" id="txtdescripcion" autocomplete="off">
                    </div>
                
                    <div class="col-sm-6">
                        <label for="txtfechaini" class="form-label">Fecha de Inicio</label>
                        <input type="date" class="form-control" id="txtfechaini" autocomplete="off">
                    </div>
                
                    <div class="col-sm-6">
                        <label for="txtfechafin" class="form-label">Fecha de Finalización</label>
                        <input type="date" class="form-control" id="txtfechafin" autocomplete="off">
                    </div>
                </div>

                <div class="row mt-2">
                    <div class="col-12">
                        <div id="mensajeError" class="alert alert-danger" role="alert">
                            A simple danger alert—check it out!
                        </div>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="Guardar()">Guardar</button>
            </div>
        </div>
    </div>
</div>

@section scripts
    {
    <script>

        var tabladata;
        var filaseleccionada;

          tabladata = $("#tablatarea").DataTable
              ({
                  responsive: true,
                  ordering: false,
                  "ajax":
                  {
                      url: '@Url.Action("ListarTareas", "Home")',
                      type: "GET",
                      dataType: "json"
                  },
                  "columns":
                  [
                          { "data": "idTarea" },
                          { "data": "idAct" },
                          { "data": "nombreTarea" },
                          { "data": "descripcionT" },
                          {
                              "data": "fechaIniT",
                              "render": function (data)
                              {
                                  return new Date(parseInt(data.substr(6))).toLocaleDateString();
                              }
                          },
                          {
                              "data": "fechaFinT",
                              "render": function (data) {
                                  return new Date(parseInt(data.substr(6))).toLocaleDateString();
                              }
                          },
                          {
                              "defaultContent": '<button type="button" class="btn btn-success btn-sm btn-editar"><i class="fas fa-pen"></i></button>' +
                                  '<button type="button" class="btn btn-danger btn-sm ms-2 btn-eliminar"><i class="fas fa-trash"></i></button>',
                              "orderable": false,
                              "searchable": false,
                              "width": "90px"
                          }
                  ],
                  "language":
                  {
                      url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json',
                  }
              });

        function abrirModal(json)
        {
            $("#txtidtarea").val(0);
            $("#txtidactividad").val("");
            $("#txtnombretarea").val("");
            $("#txtdescripcion").val("");
            $("#txtfechaini").val("");
            $("#txtfechafin").val("");

            $("#mensajeError").hide();

            if (json != null)
            {
                $("#txtidtarea").val(json.idTarea);
                $("#txtidactividad").val(json.idAct);
                $("#txtnombretarea").val(json.nombreTarea);
                $("#txtdescripcion").val(json.descripcionT);

                var fechaIniT = new Date(parseInt(json.fechaIniT.substr(6)));
                var fechaFinT = new Date(parseInt(json.fechaFinT.substr(6)))
                $("#txtfechaini").val(fechaIniT.toISOString().split('T')[0]);
                $("#txtfechafin").val(fechaFinT.toISOString().split('T')[0]);
            }

            $("#FormModal").modal("show");
        }

        $("#tablatarea tbody").on("click", '.btn-editar', function ()
        {
            filaseleccionada = $(this).closest("tr");
            var data = (tabladata.row(filaseleccionada).data());

            abrirModal(data)
        })

        $("#tablatarea tbody").on("click", '.btn-eliminar', function () {
            var tareaseleccionada = $(this).closest("tr");
            var data = (tabladata.row(tareaseleccionada).data());

            swal
                ({
                    title: "¿Esta Seguro?",
                    text: "¿Desea eliminar la tarea?",
                    type: "warning",
                    showCancelButton: true,
                    confirmButtonClass: "btn-primary",
                    confirmButtonText: "Si",
                    cancelButtonText: "No",
                    closeOnConfirm: true
                },
                    function ()
                    {
                        jQuery.ajax
                        ({
                            url: '@Url.Action("EliminarTarea", "Home")',
                            type: "POST",
                            data: JSON.stringify({ id: data.idTarea }),
                            dataType: "json",
                            contentType: "application/json; charset=utf-8",
                            success: function (data) {
                                if (data.resultado) {
                                    tabladata.row(tareaseleccionada).remove().draw();
                                }
                                else
                                {
                                    swal("No se pudo eliminar la tarea", data.mensaje, "error");
                                }
                            },
                            error: function (error)
                            {
                                 console.log(error)
                            },
                            beforeSend: function ()
                            {

                            }
                        });
                    }
            );       
        })


        function Guardar()
        {
            var Tarea =
            {
                idTarea: $("#txtidtarea").val(),
                descripcionT: $("#txtdescripcion").val(),
                fechaFinT: $("#txtfechafin").val(),
                fechaIniT: $("#txtfechaini").val(),
                idAct: $("#txtidactividad").val(),
                nombreTarea: $("#txtnombretarea").val()
            }

            jQuery.ajax
                ({
                    url: '@Url.Action("GuardarTarea", "Home")',
                    type: "POST",
                    data: JSON.stringify({ objeto: Tarea }),
                    dataType: "json",
                    contentType: "application/json; charset=utf-8",
                    success: function (data) {
                        //Tarea Nueva
                        if (Tarea.idTarea == 0) {
                            if (data.resultado != 0) {
                                Tarea.idTarea = data.resultado;
                                tabladata.row.add(Tarea).draw(false);
                                $("#FormModal").modal("hide");
                            }
                            else
                            {
                                $("#mensajeError").text(data.mensaje);
                                $("#mensajeError").show();
                            }
                        }

                        //Tarea Editada
                        else
                        {
                            if (data.resultado) {
                                tabladata.row(filaseleccionada).data(Tarea).draw(false);
                                filaseleccionada = null;
                                $("#FormModal").modal("hide");
                            }
                            else
                            {
                                $("#mensajeError").text(data.mensaje);
                                $("#mensajeError").show();
                            }
                        }
                    },
                    error: function (error) {
                        console.log(error)
                    },
                    beforeSend: function () {

                    }
                });
        }
    </script>
}
