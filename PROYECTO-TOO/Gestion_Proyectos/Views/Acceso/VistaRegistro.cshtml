
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Register - SB Admin</title>
    @Styles.Render("~/Content/css")
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
</head>
<body class="bg-primary">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-7">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-bold my-4" style="color: black;">Registrarse</h3></div>
                                <div class="card-body">
                                    <form action="@Url.Action("RegistrarUsuario", "Acceso")" method="post">
                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <div class="form-floating mb-3 mb-md-0">
                                                    <input class="form-control" id="inputFirstName" type="text" name="nombre" required placeholder="Enter your first name" />
                                                    <label for="inputFirstName" style="color: black;"><i class="fas fa-user"></i> Nombres</label>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-floating">
                                                    <input class="form-control" id="inputLastName" type="text" name="apellido" required placeholder="Enter your last name" />
                                                    <label for="inputLastName" style="color: black;"><i class="fas fa-user"></i> Apellidos</label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-floating mb-3">
                                            <input class="form-control" id="inputEmail" type="email" name="correo" required placeholder="name@example.com" />
                                            <label for="inputEmail" style="color: black;"><i class="fa fa-envelope"></i> Correo electrónico</label>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <div class="form-floating mb-3 mb-md-0">
                                                    <input class="form-control" id="inputPassword" type="password" name="contrasena" required placeholder="Create a password" />
                                                    <label for="inputPassword" style="color: black;"><i class="fa fa-lock"></i> Contraseña</label>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-floating mb-3 mb-md-0">
                                                    <input class="form-control" id="inputConfirmPassword" type="password" name="confirmarContrasena" required placeholder="Create a password" />
                                                    <label for="inputPassword" style="color: black;"><i class="fa fa-lock"></i> Confirmar Contraseña</label>
                                                </div>
                                            </div>
                                            @if (TempData["SuccessMessage"] != null)
                                            {
                                                <div class="alert alert-success text-center mt-3">
                                                    @TempData["SuccessMessage"]
                                                </div>
                                            }

                                            @if (TempData["ErrorMessage"] != null)
                                            {
                                                <div class="alert alert-danger text-center mt-3">
                                                    @TempData["ErrorMessage"]
                                                </div>
                                            }
                                        </div>
                                        <div class="mt-4 mb-0">
                                            <div class="d-grid"><button type="submit" class="btn btn-primary btn-block">Crear Cuenta</button></div>
                                        </div>
                                    </form>
                                </div>
                                <div class="card-footer text-center py-3">
                                    <div class="small"><a href="@Url.Action("Login", "Acceso")">Tienes cuenta? Ingresa aquí!</a></div>
                                </div>
                                
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
        <div id="layoutAuthentication_footer">
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; Proyecto TOO-115 2023</div>
                        
                    </div>
                </div>
            </footer>
        </div>
    </div>
    @Scripts.Render("~/bundles/complementos")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>


